<% layout("layouts/boilerplate") %>


<div class="row m-2">
    <h2 style="margin-left: 2rem;" class="offset-2">Welccome Back to TrekInn! You are One step Away</h2>
    <div class="col-6 offset-4 mt-5">

        <form action="/user/login" method="POST" novalidate class="needs-validation">
            <div class="mb-3 mt-2">
            
                <label for="username" class="form-label">User Name : </label>
                <input type="text" name="username" placeholder="@" id="username" class="form-control" required style="text-align: end;">
                <div class="valid-feedback">Good!</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password : </label>
                <input type="password" name="password" placeholder="" id="password" class="form-control" required style="text-align: end;">
                <div class="valid-feedback">Good!</div>
            </div>


            <button class="btn btn-dark add-btn">Login</button>
        </form>
        
    </div>
    <div class="mt-5 col-2 offset-4">
            <a class="btn btn-outline-dark outline-btn" href="/user/signup">Create New Account?</a>
    </div>
</div>