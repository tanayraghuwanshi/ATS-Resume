<% layout("layouts/boilerplate") %>
<div class="row mt-5">
    <div class="col-10 offset-2">
        
        <div class="row">
            <h3 class="col-10"><%= listing.title %>  </h3>
            <p class="starability-result card-text" data-rating=<%= listing.rating %>>   
            </p>
        </div>

        <div class="card">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="No image">
            
        </div>
        <ul class="show-details">
            <li>Listed By - <i><%= listing.owner.username %></i></li>
            <li><%= listing.description %></li>
            <li> &#8377; <%= listing.price.toLocaleString("en-IN") %></li>
            <li><%= listing.location %></li>
            <li><%= listing.country %></li>
        </ul>

        <% if(currentUser && currentUser._id.equals(listing.owner._id)) { %>
        
            <div class="show-btns mb-5">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark" style="background-color:  #89cdbe ; border: none;"> Edit </a>
            &nbsp; &nbsp; &nbsp; &nbsp;
            <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
                <Button class="btn btn-dark"> Delete </Button>
            </form>
            </div>

        <% } %>

    </div>
    <div class="col-10 offset-2 mb-5">
        <hr>
        <% if(currentUser){ %>
            <h4 class="mt-3 mb-3" >Leave a Review</h4>
        <form action="/listing/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
            <div class="mt-3 mb-3 rangeDiv">
                
                <fieldset class="starability-basic">
                <legend>Rate :</legend>
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>

            </div>
            <div class="mt-3 mb-3 ">
                <label for="feedback" class="form-label">Feedback</label>
                <textarea name="review[feedback]" class="form-control" id="feedback" cols="20" rows="5" required></textarea>
                <div class="invalid-feedback" >
                    Feedback required!
                </div>
                <div class="valid-feedback">
                    Good!
                </div>
            </div>

            <button class="btn btn-dark add-btn mt-3">Submit</button>
        </form>
        
        <% } %>
        <hr>
        <h2>Reviews</h2>
        <div class="row">
            <% for(review of listing.reviews) {%>
                <div class="card col-5 m-4 ms-5">
                    <div class="card-body">
                        <div class="card-title d-flex" style="justify-content: space-between;">
                            <h5> <%= review.author.username %></h5>
                        <p class="starability-result card-text" data-rating=<%= review.rating %>>
                                        
                        </p>
                        </div>

                        <p class="card-text mb-2"><%= review.feedback %></p>
                        
                        
                    </div>
                </div>
        
            <% } %>
        </div>
    </div>
</div>
